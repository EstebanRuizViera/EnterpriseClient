<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffffdff"
    android:orientation="vertical"
    tools:context=".cart.CartListActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Shopping Cart"
            app:titleTextColor="?attr/textColor" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:layout_margin="2dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        tools:ignore="RtlCompat">

        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Total"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            android:gravity="end"
            android:textStyle="bold"
            android:text="1500 â‚¬"
            tools:ignore="RtlCompat" />

    </LinearLayout>



        <Button
            android:id="@+id/checkout"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_borders"
            android:padding="10dp"
            android:layout_gravity="center"
            android:text="Checkout as a guest" />


        <Button
            android:id="@+id/checkoutLogin"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round_borders"
            android:padding="10dp"
            android:layout_gravity="center"
            android:text="Sign in for faster checkout" />



</LinearLayout>