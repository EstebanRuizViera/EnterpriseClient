<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReservationActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Product"
            app:titleTextColor="?attr/textColor" />
    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:src="@drawable/loro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/productReservationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Loro Parque"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:stepSize="0.5"
            android:numStars="5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:progressTint="@color/ratingBarColor"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:rating="4.5" />

            <TextView
                android:id="@+id/reservationPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:gravity="end"
                android:text="150â‚¬"
                android:textStyle="bold"
                android:textSize="25sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63 customer ratings" />

        <TextView
            android:id="@+id/productReservationDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:text="Golden, perfectly groomed hair tight in a ponytail reveals a furrowed, lively face. Bloodshot sapphire eyes, set high within their sockets, watch carefully over the mountains they've become enchancted by for so long.
Dark stubble graciously compliments his eyes and cheekbones and leaves a pleasurable memory of his fortunate destiny."
            android:textColor="?attr/descriptionColor"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/checkDisponibility"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/availability_button_circle"
            android:clickable="true"
            android:text="Check availability"
            android:textColor="?attr/textColor" />


    </LinearLayout>

</LinearLayout>