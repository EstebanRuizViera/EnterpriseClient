<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="General">
        <SwitchPreference
            android:icon="@drawable/moon"
            android:defaultValue="false"
            android:key="darkMode"
            android:title="Dark mode"
            android:summary="Change application theme"/>


    <ListPreference
        android:defaultValue="1"
        android:dialogTitle="Select language"
        android:icon="@drawable/subject"
        android:entries="@array/pref_language"
        android:entryValues="@array/pref_language"
        android:key="Language"
        android:title="Language" />

    </PreferenceCategory>


    <PreferenceCategory android:title="Account ">

        <Preference
            android:icon="@drawable/trash"
            android:key="delete_account"
            android:title="Delete Account"
             />

        <Preference
            android:icon="@drawable/logout"
            android:key="log_out"
            android:title="Log out" />

    </PreferenceCategory>



    <PreferenceCategory android:title="About">

        <Preference
            android:summary="1.0"
            android:title="Version" />

        <Preference
            android:icon="@drawable/writing"
            android:key="key_send_feedback"
            android:summary="Got any queries? We are happy to help!"
            android:title="Send feedback" />

        <!-- preference opens url in browser -->
        <Preference
            android:key="frequently_asked_questions"
            android:icon="@drawable/question"
            android:summary="View frequently asked questions"
            android:title="FAQ">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://kotlinlang.org/docs/reference/faq.html" />
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>