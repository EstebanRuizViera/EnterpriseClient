<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.padwordbooking">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher_padword_round"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_padword_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.padwordbooking.MyBookingsActivity"/>
        <activity android:name="com.example.padwordbooking.CustomerDetailsActivity" />
        <activity android:name="com.example.padwordbooking.SettingsActivity" />
        <activity android:name="com.example.padwordbooking.ProfileActivity" />
        <activity android:name="com.example.padwordbooking.CartListActivity" />
        <activity android:name="com.example.padwordbooking.AvailabilityActivity" />
        <activity android:name="com.example.padwordbooking.ProductActivity" />
        <activity android:name="com.example.padwordbooking.SummaryActivity" />
        <activity
            android:name="com.example.padwordbooking.DrawerActivity"
            android:theme="@style/PreferenceScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>